.slider-control {
  text-align: center;
}

.slider-control__arrow-left,
.slider-control__arrow-right {
  display: none;
}

.slider-control__toggle {
  width: 11px;
  height: 11px;
  padding: 0;
  margin-right: 12px;
  background-color: #bec2c7;

  border-radius: 50%;
  cursor: pointer;
  outline: none;
  border: 2px solid #f2f2f2;

  &:active,
  &:focus {
    border: 2px solid @bg-header;
  }
}

@media (min-width: 660px) {
  .slider-control {
    order: 2;
  }

  .slider-control__arrow-left,
  .slider-control__arrow-right {
    display: none;
  }
}

@media (min-width: 960px) {
  .slider-control__toggle {
    display: none;
  }

  .slider-control__arrow-left {
    display: block;
    position: absolute;
    left: 10vw;
    top: 145px;
    width: 22px;
    height: 41px;

    background: url("../img/icon-review-arrow-left.svg") no-repeat;
    opacity: 0.3;
    cursor: pointer;
    outline: none;
    border: none;
  }

  .slider-control__arrow-right {
    display: block;
    position: absolute;
    right: 10vw;
    top: 145px;
    width: 22px;
    height: 41px;

    background: url("../img/icon-review-arrow-right.svg") no-repeat;
    opacity: 0.3;
    cursor: pointer;
    outline: none;
    border: none;
  }
}
